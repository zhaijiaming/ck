@using CKWMS.App_Code
@using CKWMS.Models
@using X.PagedList
@using X.PagedList.Mvc
@{
    ViewBag.Title = "商品信息清单";
    string _searchcondition = ViewBag.SearchCondition;
}
<script type="text/javascript">
    $(document).ready(function () {
        $("tr").bind("dblclick", function () {
            var u_id = $(this).find('td').eq(0).find('input').val();
            if (u_id != null) {
                var url_go = "/base_shangpinxx/Edit/" + u_id;
                location.href = url_go;
            }
        });
        $("#bt_sendcheck").click(function () {
            var sendval = "";
            $("#mydatatable tr input[type=checkbox]").each(function () {
                if (this.checked)
                    sendval = sendval + $(this).val() + ",";
            });
            $.post("/quan_shouyingsq/checkadd", { checkval: sendval, checktype: "1" }, function (data, status) {
                if (data = "ok")
                    window.location.reload();
                else
                    alert("送审失败，请重新上传！");
            });
        });
    });
    function AddInfo() {
        location.href = "/base_shangpinxx/Add";
    }
    function EditInfo() {
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                location.href = "/base_shangpinxx/Edit/" + $(this).val();
        });
    }
    function DelInfo() {
        var sDel = "";
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                sDel = sDel + ", " + $(this).val()
        });
        if (sDel.length < 2)
            return;
        var url_go = "/base_shangpinxx/Delete/?del=" + sDel;
        location.href = url_go;
    }
</script>
@{
    List<SearchConditionModel> scms = new List<SearchConditionModel>();
    if (_searchcondition == null || _searchcondition == "")
    {
        SearchConditionModel scm = new SearchConditionModel();
        scm.ItemCode = "HuozhuID";
        scm.ItemShowName = "huozhuid";
        scm.ItemTitle = "货主";
        scm.ItemType = "货主.简称";
        scms.Add(scm);

        scm = new SearchConditionModel();
        scm.ItemCode = "Daima";
        scm.ItemTitle = "商品代码";
        scm.ItemType = "System.String";
        scms.Add(scm);

        scm = new SearchConditionModel();
        scm.ItemCode = "Mingcheng";
        scm.ItemTitle = "商品名称";
        scm.ItemType = "System.String";
        scms.Add(scm);
    }
    else
    {
        string[] scs = _searchcondition.Split(';');
        if (scs.Length > 0)
        {
            SearchConditionModel scm = new SearchConditionModel();
            scm.ItemCode = "HuozhuID";
            scm.ItemShowName = "huozhuid";
            scm.ItemTitle = "货主";
            scm.ItemType = "货主.简称";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[0].Split(',')[1];
                if (scm.ItemValue.Length == 0)
                {
                    scm.ItemValue = "0";
                }
                scm.ItemOpValue = scs[0].Split(',')[2];
                scm.ItemJion = scs[0].Split(',')[3];
            }
            scms.Add(scm);

            scm = new SearchConditionModel();
            scm.ItemCode = "Daima";
            scm.ItemTitle = "商品代码";
            scm.ItemType = "System.String";
            scms.Add(scm);
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[1].Split(',')[1];
                scm.ItemOpValue = scs[1].Split(',')[2];
                scm.ItemJion = scs[1].Split(',')[3];
            }

            scm = new SearchConditionModel();
            scm.ItemCode = "Mingcheng";
            scm.ItemTitle = "商品名称";
            scm.ItemType = "System.String";
            scms.Add(scm);
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[2].Split(',')[1];
                scm.ItemOpValue = scs[2].Split(',')[2];
                scm.ItemJion = scs[2].Split(',')[3];
            }
        }
    }
}

<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Home">首页</a>
        </li>
        <li class="active">商品信息</li>
    </ul>
</div>
<div class="page-content">
    @Html.Search_Condition((int)Session["user_id"], "商品信息_条件组合查询", "/base_shangpinxx/index", "base_shangpinxxindex", scms)
    <div class="page-header">
        <p>
            <button type="button" class="btn btn-default " id="bt_searchInfo" data-toggle="modal" data-target="#myModal"><i class="icon-search"></i>查询</button>
            <button type="button" class="btn btn-default " id="bt_addInfo" onclick="AddInfo()"><i class="icon-adn"></i>新增</button>
            <button type="button" class="btn btn-default " id="bt_updateInfo" onclick="EditInfo()"><i class="icon-edit"></i>编辑</button>
            <button type="button" class="btn btn-default " id="bt_deleteInfo" onclick="DelInfo()"><i class="icon-remove"></i>删除</button>
            <button type="button" class="btn btn-default " id="bt_refreshInfo" onclick="javascript: location.reload()"><i class="icon-refresh"></i>刷新</button>
            <button type="button" class="btn btn-default " id="bt_sendcheck"><i class="icon-check-sign"></i>送审</button>
        </p>
    </div>
    <div id="splist" style="overflow:auto;max-height:575px;">
        <div class="table-responsive">
            <table class="table" style="overflow: hidden;text-overflow:ellipsis;white-space: nowrap;" id="mydatatable">
                <caption></caption>
                <thead>
                    <tr>
                        <td></td>
                        <td>货主</td>
                        <td>商品代码</td>
                        <td>注册证</td>
                        <td>商品名称</td>
                        <td>规格</td>
                        <td>型号</td>
                        <td>产品线</td>
                        <td>分类目录</td>
                        <td>管理分类</td>
                        <td>包装要求</td>
                        <td>存储条件</td>
                        <td>生产企业</td>
                        <td>供应商</td>
                        <td>商品条码</td>
                        <td>首营状态</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.base_shangpinxx)
                    {

                        <tr>
                            <td>
                                <label><input class="checkbox" type="checkbox" value="@item.id"></label>
                            </td>
                            @*<td>@Html.GetDataValue_ID("货主", "简称", (int)item.HuozhuID)</td>*@
                            <td>@item.Jiancheng</td>
                            <td>@item.daima</td>
                            @*<td>@Html.GetDataValue_ID("注册证", "编号", (int)item.ZhucezhengID)</td>*@
                            <td>@item.ZhucezhengBH </td>
                            <td>@item.mingcheng</td>
                            <td>@item.Guige</td>
                            <td>@item.Xinghao</td>
                            @*<td>@Html.GetDataValue_ID("产品线","",(int)item.Chanpinxian)</td>*@
                            <td>@item.cpxmingcheng</td>
                            @*<td>@Html.GetDataValue_ID("分类目录","",(int)item.Muluxuhao)</td>*@
                            <td>@item.mlmingcheng</td>
                            <td>@Html.GetCommonValue_ID("医疗器械管理类别", (int)item.guanlifenlei)</td>
                            <td>@item.baozhuangyaoqiu</td>
                            <td>@item.Cunchutiaojian</td>
                            <td>@item.Qiyemingcheng</td>
                            @*<td>@Html.GetDataValue_ID("供应商", "", (int)item.GongyingID)</td>*@
                            <td>@item.gysmingcheng</td>
                            <td>@item.shangpintm</td>
                            <td>@Html.GetCommonValue_ID("首营状态", (int)item.Shouying)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="pager">
            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</div>

