<script type="text/javascript">
    $(document).ready(function () {
        $("#pl_jldw").hide();

        $("#btn_jldw").click(function () {
            GetJldw();
            $("#pl_jldw").show();

            setTimeout(function () {
                GetChecked();
            }, 500)
        });

        $("#pl_close").click(function () {
            $("#pl_jldw").hide();
        });

        $("#bt_jldw_add").click(function () {
            var _jldw = "";
            $("#jldwdatatable tr input[type=checkbox]").each(function () {
                if (this.checked) {
                    _jldw = _jldw + $(this).parent().parent().parent().siblings().find(".mc").html() + ";";
                }
            });

            var _addOk = confirm("确定要添加这些单位吗？");
            if (_addOk) {
                $("#Danwei").val(_jldw);
                $("#pl_jldw").hide();
            }
        });

        $("#bt_jldw_all").click(function () {

            $(".checkbox").prop("checked", true);

        });

        $("#bt_jldw_clear").click(function () {

            $(".checkbox").prop("checked", false);

        });

        function GetJldw() {
            var filltable = "";
            $.post(
                "/base_jiliangdw/GetJldw",
                {

                },
                    function (data) {
                        for (var i in data) {
                            filltable = filltable + '<tr><td><div class="checkbox"><label><input type="checkbox" class ="checkbox" value="';
                            filltable = filltable + data[i].ID;
                            filltable = filltable + '"></label></div></td><td><span class="bh">';
                            filltable = filltable + data[i].Bianhao;
                            filltable = filltable + '</span></td><td><span class="mc">';
                            filltable = filltable + data[i].Mingcheng;
                            filltable = filltable + '</span></td><td>';
                            filltable = filltable + data[i].Miaoshu;
                            filltable = filltable + '</td></tr>';
                        }
                        $("#pl_jldw tbody").html(filltable);
                    });
        }
        function GetChecked() {
            var mc = $(".mc").text();
            //alert(mc);
            var i = $("#Danwei").val();
            var t = i.split(";");
            //alert(t);

            for (var k = 0; k < t.length; k++) {
                for (var l = 0; l < mc.length; l++) {
                    if (t[k] == $(".mc").eq(l).text())
                        $("input:checkbox").eq(l).attr("checked", true);
                }
            }
        };

    });
    
</script>

