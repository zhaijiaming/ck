@using CKWMS.App_Code
@using CKWMS.Models
@using X.PagedList
@using X.PagedList.Mvc
@{
    ViewBag.Title = "入库操作";
    string _searchcondition = ViewBag.SearchCondition;
}
<script type="text/javascript">
    $(document).ready(function () {
        $("tr").bind("dblclick", function () {
            var u_id = $(this).find('td').eq(0).find('input').val();
            if (u_id != null) {
                var url_go = "/wms_rukudan/Edit/" + u_id;
                location.href = url_go;
            }
        });
    });
    function AddInfo() {
        location.href = "/wms_rukudan/Add";
    }
    function EditInfo() {
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                location.href = "/wms_rukudan/Edit/" + $(this).val();
        });
    }
    function DelInfo() {
        var sDel = "";
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                sDel = sDel + ", " + $(this).val()
        });
        if (sDel.length < 2)
            return;
        var url_go = "/wms_rukudan/Delete/?del=" + sDel;
        location.href = url_go;
    }
</script>
@{
    List<SearchConditionModel> scms = new List<SearchConditionModel>();
    if (_searchcondition == null || _searchcondition == "")
    {
        SearchConditionModel scm = new SearchConditionModel();
        scm.ItemCode = "HuozhuID";
        scm.ItemTitle = "货主序号";
        scm.ItemType = "System.Int32";
        scms.Add(scm);
    }
    else
    {
        string[] scs = _searchcondition.Split(';');
        if (scs.Length > 0)
        {
            SearchConditionModel scm = new SearchConditionModel();
            scm.ItemCode = "HuozhuID";
            scm.ItemTitle = "货主序号";
            scm.ItemType = "System.Int32";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[0].Split(',')[1];
                scm.ItemOpValue = scs[0].Split(',')[2];
                scm.ItemJion = scs[0].Split(',')[3];
            }
            scms.Add(scm);
        }
    }
}

<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Home">首页</a>
        </li>
        <li class="active">入库操作</li>
    </ul>
</div>
<div class="page-content">
    @Html.Search_Condition((int)Session["user_id"], "入库单_条件组合查询", "/wms_rukudan/operatelist", "wms_rukudanoperatelist", scms)
    <div class="page-header">
        <p>
            @*<button type="button" class="btn btn-default " id="bt_searchInfo" data-toggle="modal" data-target="#myModal"><i class="icon-search"></i>查询</button>*@
            <button type="button" class="btn btn-default " id="bt_addInfo" onclick="AddInfo()"><i class="icon-adn"></i>新增</button>
            <button type="button" class="btn btn-default " id="bt_updateInfo" onclick="EditInfo()"><i class="icon-edit"></i>编辑</button>
            <button type="button" class="btn btn-default " id="bt_finish"><i class="icon-remove"></i>完成</button>
            <button type="button" class="btn btn-default " id="bt_refreshInfo" onclick="javascript: location.reload()"><i class="icon-refresh"></i>刷新</button>
        </p>
    </div>
    <div class="row">
        <table class="table" id="mydatatable">
            <caption></caption>
            <thead>
                <tr>
                    <td></td>
                    <td>入库编号</td>
                    <td>货主序号</td>
                    <td>业务类型</td>
                    <td>入库日期</td>
                    <td>入库状态</td>
                    <td>收货人</td>
                    <td>备注</td>
                    <td>货品</td>
                    <td>登记</td>
                    <td>收货</td>
                    <td>验收</td>
                    <td>上架</td>
                    <td>详单</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.wms_rukudan)
                {
                    <tr>
                        <td>
                            <div class="checkbox">
                                <label><input type="checkbox" value="@item.ID"></label>
                            </div>
                        </td>
                        <td>@item.RukudanBH</td>
                        <td>@Html.GetDataValue_ID("货主","简称",(int)item.HuozhuID)</td>
                        <td>@Html.GetCommonValue_ID("入库类型",(int)item.YewuLX)</td>
                        <td>@string.Format("{0:d}", item.RukuRQ)</td>
                        <td>@Html.GetCommonValue_ID("入库状态",(int)item.RukuZT)</td>
                        <td>@Html.GetDataValue_ID("userinfo","全名",(int)item.Shouhuoren)</td>
                        <td>@item.Beizhu</td>
                        <td><a href="/wms_rukumx/getcargos/@item.ID" target="_blank"><i class="icon-list"></i></a></td>
                        <td><a href="/wms_rukumx/add/@item.ID" target="_blank"><i class="icon-pencil"></i></a></td>
                        <td><a href="/wms_shouhuomx/index" target="_blank"><i class="icon-hand-up"></i></a></td>
                        <td><a href="/quan_rukuys/index" target="_blank"><i class="icon-check"></i></a></td>
                        <td><a href="/wms_cunhuo/index" target="_blank"><i class="icon-columns"></i></a></td>
                        <td><i class="icon-print"></i></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
