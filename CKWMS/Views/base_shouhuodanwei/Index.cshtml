@using CKWMS.App_Code;
@using CKWMS.Models;
@using X.PagedList;
@using X.PagedList.Mvc;
@{
    ViewBag.Title = "收货单位清单";
    string _searchcondition = ViewBag.SearchCondition;
}
<script type="text/javascript">
    $(document).ready(function () {
        $("tr").bind("dblclick", function () {
            var u_id = $(this).find('td').eq(0).find('input').val();
            if (u_id != null) {
                var url_go = "/base_shouhuodanwei/Edit/" + u_id;
                location.href = url_go;
            }
        });
    });
    function AddInfo() {
        location.href = "/base_shouhuodanwei/Add";
    }
    function EditInfo() {
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                location.href = "/base_shouhuodanwei/Edit/" + $(this).val();
        });
    }
    function DelInfo() {
        var sDel = "";
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                sDel = sDel + ", " + $(this).val()
        });
        if (sDel.length < 2)
            return;
        var url_go = "/base_shouhuodanwei/Delete/?del=" + sDel;
        location.href = url_go;
    }
</script>
@{
    List<SearchConditionModel> scms = new List<SearchConditionModel>();
    if (_searchcondition == null || _searchcondition == "")
    {
        SearchConditionModel scm = new SearchConditionModel();
        scm.ItemCode = "HuozhuID";
        scm.ItemShowName = "huozhuid";
        scm.ItemTitle = "货主";
        scm.ItemType = "货主.都有";
        scms.Add(scm);
    }
    else
    {
        string[] scs = _searchcondition.Split(';');
        if (scs.Length > 0)
        {
            SearchConditionModel scm = new SearchConditionModel();
            scm.ItemCode = "HuozhuID";
            scm.ItemShowName = "huozhuid";
            scm.ItemTitle = "货主";
            scm.ItemType = "货主.都有";
            if (scs.Length > 1)
            {

                scm.ItemValue = scs[0].Split(',')[1];
                if(scm.ItemValue.Length == 0)
                {
                    scm.ItemValue = "0";
                }
                scm.ItemOpValue = scs[0].Split(',')[2];
                scm.ItemJion = scs[0].Split(',')[3];
            }
            scms.Add(scm);
        }

    }
}
<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Home">首页</a>
        </li>
        <li class="active">收货单位</li>
    </ul>
</div>
<div class="page-content">
    @Html.Search_Condition(5, "收货单位_条件组合查询", "/base_shouhuodanwei/index", "base_shouhuodanweiindex", scms)
    <div class="page-header">
        <p>
            <button type="button" class="btn btn-default " id="bt_searchInfo" data-toggle="modal" data-target="#myModal"><i class="icon-search"></i>查询</button>
            <button type="button" class="btn btn-default " id="bt_addInfo" onclick="AddInfo()"><i class="icon-adn"></i>新增</button>
            <button type="button" class="btn btn-default " id="bt_updateInfo" onclick="EditInfo()"><i class="icon-edit"></i>编辑</button>
            <button type="button" class="btn btn-default " id="bt_deleteInfo" onclick="DelInfo()"><i class="icon-remove"></i>删除</button>
            <button type="button" class="btn btn-default " id="bt_refreshInfo" onclick="javascript: location.reload()"><i class="icon-refresh"></i>刷新</button>
        </p>
    </div>
    <div class="row">
        <table class="table" id="mydatatable">
            <caption></caption>
            <thead>
                <tr>
                    <td></td>
                    <td>货主</td>
                    <td>单位名称</td>
                    <td>营业执照编号</td>
                    <td>营业执照有效期</td>
                    <td>营业执照照片</td>
                    <td>经营许可编号</td>
                    <td>经营许可有效期</td>
                    <td>经营许可照片</td>
                    <td>首营状态</td>
                    <td>录入日期</td>
                    <td>输入人</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.base_shouhuodanwei)
                {
                    <tr>
                        <td>
                            <div class="checkbox">
                                <label><input type="checkbox" value="@item.ID"></label>
                            </div>
                        </td>
                        <td>@Html.GetDataValue_ID("货主", "简称", (int)item.HuozhuID)</td>
                        <td>@item.Mingcheng</td>
                        <td>@item.YingyezhizhaoBH</td>
                        <td>@item.YingyezhizhaoYXQ</td>
                        <td>@item.YingyezhizhaoTP</td>
                        <td>@item.JingyingxukeBH</td>
                        <td>@item.JingyingxukeYXQ</td>
                        <td>@item.JingyingxukeTP</td>
                        <td>@Html.GetCommonValue_ID("首营状态", (int)item.Shouying)</td>
                        <td>@item.MakeDate</td>
                        <td>@Html.GetDataValue_ID("userinfo", "全名", (int)item.MakeMan)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="pager">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
    </div>
</div>
