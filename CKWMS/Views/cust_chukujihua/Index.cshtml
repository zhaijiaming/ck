@using CKWMS.App_Code
@using CKWMS.Models
@using X.PagedList
@using X.PagedList.Mvc
@{
    ViewBag.Title = "出库计划清单";
    string _searchcondition = ViewBag.SearchCondition;
}
<script type="text/javascript">
    $(document).ready(function () {
        if (eval($("#usertype").val()) > 0)
        {
            $("#bt_newout").hide();
            $("#bt_newout_ph").hide();
    }
        $("tr").bind("dblclick", function () {
            var u_id = $(this).find('td').eq(0).find('input').val();
            if (u_id != null) {
                var url_go = "/cust_chukujihua/Edit/" + u_id;
                location.href = url_go;
            }
        });
        $("#bt_newout").click(function () {
            var _selval = "";
            $("#mydatatable tbody tr input[type=checkbox]").each(function () {
                if (this.checked) {
                    //_selval = _selval + $(this).val() + ",";
                    _selval = $(this).val() + ",";
                }
            });
            if (_selval != "") {
                $.ajax({
                    async: true,
                    beforeSend: function () {
                        ShowWait();
                    },
                    complete: function () {
                        HiddenWait();
                    },
                    type: "POST",
                    url: "/wms_chukudan/addbysalesplan",
                    data: {
                        ck: _selval
                    },
                    success: function (data) {
                        if (data == -1)
                            alert("操作失败，请联系管理员！");
                        else if (data == -3) {
                            alert("已生成了出库单，不能再次生成出库dan！");
                        }
                        else if (data == -4)
                            alert("生成的出库单商品和指令不符，请联系管理员！");
                        else
                            location.reload();
                    }
                });
            }
        });
        $("#bt_newout_ph").click(function () {
            var _selval = "";
            $("#mydatatable tbody tr input[type=checkbox]").each(function () {
                if (this.checked) {
                    //_selval = _selval + $(this).val() + ",";
                    _selval = $(this).val() + ",";
                }
            });
            if (_selval != "") {
                $.ajax({
                    async: true,
                    beforeSend: function () {
                        ShowWait();
                    },
                    complete: function () {
                        HiddenWait();
                    },
                    type: "POST",
                    url: "/wms_chukudan/addbysalesplan_ph",
                    data: {
                        ck: _selval
                    },
                    success: function (data) {
                        if (data == -1)
                            alert("操作失败，请联系管理员！");
                        else if (data == -3) {
                            alert("已生成了出库单，不能再次生成出库dan！");
                        }
                        else if (data == -4)
                            alert("生成的出库单商品和指令不符，请联系管理员！");
                        else if (data == -5) {
                            alert("拣货失败，无指定库存！");
                            location.reload();
                        }
                        else if (data == -6) {
                            alert("存货出现问题，请联系管理员");
                            location.reload();
                        }
                        else if (data == -7) {
                            alert("现存量不足，请联系管理员");
                            location.reload();
                        }
                        else
                            location.reload();
                    }
                });
            }
        });
        $("#pl_cargo").draggable({ handle: '.panel-heading' }, { containment: [-1000, 50, 1300, 600] });
        //商品列表
        $(".icon-list-ul").click(function () {
            var chukujihua_id = $(this).parent().find("input").val();
            if (chukujihua_id > 0 && chukujihua_id != null) {
                getCargos(chukujihua_id);
                $("#pl_cargo").show();
            }
        });
        $("#pl_cargo_close").click(function () {
            $("#pl_cargo").hide();
        });
    });
    function getCargos(id) {
        var detail = "";
        var chukujihua_id = id;
        $.ajax({
            async: true,
            beforeSend: function () {
                ShowWait();
            },
            complete: function () {
                HiddenWait();
            },
            type: "POST",
            url: "/cust_chukujihua/getCargos",
            data: {
                id: chukujihua_id
            },
            success: function (data) {
                if (data.length > 0) {
                    for (var i in data) {
                        detail = detail + '<tr><td class="hidden">';
                        detail = detail + data[i].ID;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].ShangpinDM;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].ShangpinMC;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].Zhucezheng;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].Guige;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].Pihao;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].Pihao1;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].Xuliema;
                        detail = detail + '</td><td>';
                        if (data[i].ShengchanRQ != null)
                            detail = detail + data[i].ShengchanRQ.toDate().Format("yyyy-MM-dd");
                        detail = detail + '</td><td>';
                        if (data[i].ShixiaoRQ != null)
                            detail = detail + data[i].ShixiaoRQ.toDate().Format("yyyy-MM-dd");
                        detail = detail + '</td><td>';
                        detail = detail + data[i].JihuaSL;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].DaohuoSL;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].JibenDW;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].BaozhuangDW;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].Huansuanlv;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].Changjia;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].Chandi;
                        detail = detail + '</td><td>';
                        detail = detail + data[i].Beizhu;
                        detail = detail + '</td><tr>';
                    }
                }
                $("#dt_cargo tbody").html(detail);
            }
        });
    }
    function AddInfo() {
        location.href = "/cust_chukujihua/Add";
    }
    function EditInfo() {
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                location.href = "/cust_chukujihua/Edit/" + $(this).val();
        });
    }
    function CloseInfo() {
        var sDel = "";
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked) {
                var selstate = $(this).parent().parent().parent().find("td").eq(2).html();
                alert(selstate);
                if (selstate == "新建")
                    sDel = sDel + ", " + $(this).val()
            }
        });
        if (sDel.length < 2)
            return;
        var url_go = "/cust_chukujihua/closeplan/?del=" + sDel;
        location.href = url_go;
    }
    function DelInfo() {
        var sDel = "";
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked) {
                var selstate = $(this).parent().parent().parent().find("td").eq(2).html();
                if (selstate == "新建")
                    sDel = sDel + ", " + $(this).val()
            }
        });
        if (sDel.length < 2)
            return;
        var url_go = "/cust_chukujihua/Delete/?del=" + sDel;
        location.href = url_go;
    }
</script>
@{
    List<SearchConditionModel> scms = new List<SearchConditionModel>();
    if (_searchcondition == null || _searchcondition == "")
    {
        SearchConditionModel scm = new SearchConditionModel();
        scm.ItemCode = "HuozhuID";
        scm.ItemShowName = "huozhuid";
        scm.ItemTitle = "货主";
        scm.ItemType = "货主.简称";
        scms.Add(scm);

        scm = new SearchConditionModel();
        scm.ItemCode = "KehuMC";
        scm.ItemTitle = "客户名称";
        scm.ItemType = "System.String";
        scms.Add(scm);

        scm = new SearchConditionModel();
        scm.ItemCode = "KehuDH";
        scm.ItemTitle = "客户单号";
        scm.ItemType = "System.String";
        scms.Add(scm);

        scm = new SearchConditionModel();
        scm.ItemCode = "MakeDate";
        scm.ItemTitle = "录入日期";
        scm.ItemType = "System.DateTime";
        scms.Add(scm);
    }
    else
    {
        string[] scs = _searchcondition.Split(';');
        if (scs.Length > 0)
        {
            SearchConditionModel scm = new SearchConditionModel();
            scm.ItemCode = "HuozhuID";
            scm.ItemShowName = "huozhuid";
            scm.ItemTitle = "货主";
            scm.ItemType = "货主.简称";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[0].Split(',')[1];
                if (scm.ItemValue.Length == 0)
                {
                    scm.ItemValue = "0";
                }
                scm.ItemOpValue = scs[0].Split(',')[2];
                scm.ItemJion = scs[0].Split(',')[3];
            }
            scms.Add(scm);

            scm = new SearchConditionModel();
            scm.ItemCode = "KehuMC";
            scm.ItemTitle = "客户名称";
            scm.ItemType = "System.String";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[1].Split(',')[1];
                scm.ItemOpValue = scs[1].Split(',')[2];
                scm.ItemJion = scs[1].Split(',')[3];
            }
            scms.Add(scm);

            scm = new SearchConditionModel();
            scm.ItemCode = "KehuDH";
            scm.ItemTitle = "客户单号";
            scm.ItemType = "System.String";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[2].Split(',')[1];
                scm.ItemOpValue = scs[2].Split(',')[2];
                scm.ItemJion = scs[2].Split(',')[3];
            }
            scms.Add(scm);

            scm = new SearchConditionModel();
            scm.ItemCode = "MakeDate";
            scm.ItemTitle = "录入日期";
            scm.ItemType = "System.DateTime";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[3].Split(',')[1];
                scm.ItemOpValue = scs[3].Split(',')[2];
                scm.ItemJion = scs[3].Split(',')[3];
            }
            scms.Add(scm);
        }
    }
}

<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Home">首页</a>
        </li>
        <li class="active">出库计划</li>
