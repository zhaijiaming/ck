@using CKWMS.App_Code
@using CKWMS.Models
@using X.PagedList
@using X.PagedList.Mvc
@{
    ViewBag.Title = "商品注册证清单";
    string _searchcondition = ViewBag.SearchCondition;
}

<script type="text/javascript">
    $(document).ready(function () {
        $("tr").bind("dblclick", function () {
            var u_id = $(this).find('td').eq(0).find('input').val();
            if (u_id != null) {
                var url_go = "/base_shangpinzcz/Edit/" + u_id;
                location.href = url_go;
            }
        });
    });
    function AddInfo() {
        location.href = "/base_shangpinzcz/Add";
    }
    function EditInfo() {
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                location.href = "/base_shangpinzcz/Edit/" + $(this).val();
        });
    }
    function DelInfo() {
        var sDel = "";
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                sDel = sDel + ", " + $(this).val()
        });
        if (sDel.length < 2)
            return;
        var url_go = "/base_shangpinzcz/Delete/?del=" + sDel;
        location.href = url_go;
    }

    
</script>
@{
    List<SearchConditionModel> scms = new List<SearchConditionModel>();
    if (_searchcondition == null || _searchcondition == "")
    {
        SearchConditionModel scm = new SearchConditionModel();
        scm.ItemCode = "Bianhao";
        scm.ItemTitle = "注册证编号";
        scm.ItemType = "System.String";
        scms.Add(scm);

        scm = new SearchConditionModel();
        scm.ItemCode = "Mingcheng";
        scm.ItemTitle = "商品名称";
        scm.ItemType = "System.String";
        scms.Add(scm);

        scm = new SearchConditionModel();
        scm.ItemCode = "ZhucezhengYXQ";
        scm.ItemTitle = "注册有效期";
        scm.ItemType = "System.String";
        scms.Add(scm);

    }
    else
    {
        string[] scs = _searchcondition.Split(';');
        if (scs.Length > 0)
        {
            SearchConditionModel scm = new SearchConditionModel();
            scm.ItemCode = "Bianhao";
            scm.ItemTitle = "注册证编号";
            scm.ItemType = "System.String";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[0].Split(',')[1];
                scm.ItemOpValue = scs[0].Split(',')[2];
                scm.ItemJion = scs[0].Split(',')[3];
            }
            scms.Add(scm);

            scm = new SearchConditionModel();
            scm.ItemCode = "Mingcheng";
            scm.ItemTitle = "商品名称";
            scm.ItemType = "System.String";
            //if (scs.Length > 1)
            //{
            //    scm.ItemValue = scs[1].Split(',')[1];
            //    scm.ItemOpValue = scs[1].Split(',')[2];
            //    scm.ItemJion = scs[1].Split(',')[3];
            //}
            scms.Add(scm);

            scm = new SearchConditionModel();
            scm.ItemCode = "ZhucezhengYXQ";
            scm.ItemTitle = "注册有效期";
            scm.ItemType = "System.String";
            scms.Add(scm);
        }
    }
}

<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Home">首页</a>
        </li>
        <li class="active">商品注册证</li>
    </ul>
</div>
<div class="page-content">
    @Html.Search_Condition((int)Session["user_id"], "商品注册证_条件组合查询", "/base_shangpinzcz/index", "base_shangpinzczindex", scms)
    <div class="page-header">
        <p>
            <button type="button" class="btn btn-default " id="bt_searchInfo" data-toggle="modal" data-target="#myModal"><i class="icon-search"></i>查询</button>
            <button type="button" class="btn btn-default " id="bt_addInfo" onclick="AddInfo()"><i class="icon-adn"></i>新增</button>
            <button type="button" class="btn btn-default " id="bt_updateInfo" onclick="EditInfo()"><i class="icon-edit"></i>编辑</button>
            <button type="button" class="btn btn-default " id="bt_deleteInfo" onclick="DelInfo()"><i class="icon-remove"></i>删除</button>
            <button type="button" class="btn btn-default " id="bt_refreshInfo" onclick="javascript: location.reload()"><i class="icon-refresh"></i>刷新</button>
        </p>
    </div>
    <div style="width:1390px;height:500px; overflow:scroll;">
        <div class="table-responsive">
            <table class="table" style="overflow: hidden;text-overflow:ellipsis;white-space: nowrap;" id="mydatatable">
                <caption></caption>
                <thead>
                    <tr>
                        <td></td>
                        <td>注册证编号</td>
                        <td>商品名称</td>
                        <td>规格</td>
                        <td>产品标准</td>
                        <td>注册证有效期</td>
                        <td>录入日期</td>
                        <td>中文编号</td>
                        <td>产地</td>
                        <td>生产企业</td>
                        <td>服务机构</td>
                        <td>注册证照片</td>
                        <td>输入人</td>
                        <td>备注</td>
                        <td>是否失效</td>
                        @*<td>适用范围</td>
                            <td>注册代理</td>*@
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.base_shangpinzcz)
                {
                        <tr>
                            <td>
                                <div class="checkbox">
                                    <label><input type="checkbox" value="@item.ID"></label>
                                </div>
                            </td>
                            <td>@item.Bianhao</td>
                            <td>@item.Mingcheng</td>
                            @*规格*@
                            <td><input class="btn btn-default" type="button" value="Input"></td>
                            <td>@item.Bianzhun</td>
                            <td>@item.ZhucezhengYXQ.ToString("yyyy-MM-dd")</td>
                            <td>@item.MakeDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.BianhaoZW</td>
                            <td>@item.Chandi</td>
                            <td>@Html.GetDataValue_ID("","名称",(int)item.ShengchanqiyeID)</td>
                            <td>@item.ShouhuoJG</td>
                            <td><a href="/files/zhengzhao/@item.ZhucezhengTP" target="_blank">浏览</a></td>
                            <td>@Html.GetDataValue_ID("userinfo", "全名", (int)item.MakeMan)</td>
                            <td>@item.Beizhu</td>
                            <td id="changeText">@item.ShixiaoSF</td>
                            @*<td>@item.ShiyongFW</td>
                                <td>@item.ZhuceDL</td>*@
                        </tr>
                }
                </tbody>
            </table>

            
            <div class="pager">
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
            </div>

        </div>
    </div>
</div>
