                <div class="control-label col-sm-2">
                    @Html.LabelFor(m => m.Chandi)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Chandi, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Chandi)
