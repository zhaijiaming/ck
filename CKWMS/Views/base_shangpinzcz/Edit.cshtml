@using CKWMS.App_Code
@using CKWMS.Models
@model base_shangpinzczViewModel
@{
    ViewBag.Title = "商品注册证修改";
}
@Html.GetFileUpload("zhucezhengtp", "zcz", "z", "cus", 1, 0, new Dictionary<string, string>() { { "zcz", "zhucezhengtp" } })

<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Home">首页</a>
        </li>
        <li>
            <a href="/base_shangpinzcz">商品注册证</a>
        </li>
        <li class="active"> 编辑</li>
    </ul>
</div>

<div class="page-content">
    @using (Html.BeginForm("Update", "base_shangpinzcz", FormMethod.Post, new { @role = "form" }))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@ViewData.Model.ID" />
        <div class="page-header">
            <p>
                <button type="submit" class="btn btn-default"><i class="icon-save"></i>更新</button>
                <button type="button" class="btn btn-default" onclick="javascript: history.back(-1); "><i class="icon-hand-left"></i>返回</button>
            </p>
        </div>
        <div class="container">
            @*注册证编号*@
            <div class="form-group">
                <div class="col-sm-2 control-label">
                    <i class="icon-leaf red"></i>@Html.LabelFor(m => m.Bianhao)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Bianhao, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Bianhao)
                </div>
            </div>
            @*商品名称*@
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <i class="icon-leaf red"></i>@Html.LabelFor(m => m.Mingcheng)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Mingcheng, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Mingcheng)
                </div>
            </div>
            @*规格*@
            <div class="form-group">
                @Html.LabelFor(m => m.Guige, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Guige, new { @class = "form-control" })
                </div>
            </div>
            @*产品标准*@
            <div class="form-group">
                @Html.LabelFor(m => m.Bianzhun, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Bianzhun, new { @class = "form-control" })
                </div>
            </div>
            @*注册证有效期*@
            <div class="form-group">
                @Html.LabelFor(m => m.ZhucezhengYXQ, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    <input onchange="check()" id="nowDate" type="date" class="form-control" name="ZhucezhengYXQ" value="@string.Format("{0:yyyy-MM-dd}",ViewData.Model.ZhucezhengYXQ)">
                </div>
            </div>
            @*录入日期*@
            <div class="form-group">
                @Html.LabelFor(m => m.MakeDate, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    <input type="date" class="form-control" name="MakeDate" value="@string.Format("{0:yyyy-MM-dd}",ViewData.Model.MakeDate)">
                </div>
            </div>
            @*中文编号*@
            <div class="form-group">
                <div class="control-label col-sm-2">
                    @Html.LabelFor(m => m.BianhaoZW)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.BianhaoZW, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BianhaoZW)
                </div>
            </div>
            @*产地*@
            <div class="form-group">
                <div class="control-label col-sm-2">
                    @Html.LabelFor(m => m.Chandi)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Chandi, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Chandi)
                </div>
            </div>
            @*生产企业*@
            <div class="form-group">
                <div class="control-label col-sm-2">
                    @Html.LabelFor(m => m.ShengchanqiyeID)
                </div>
                <div class="col-sm-10">
                    @Html.SelectList_Auto("Shengchanqiyeid", "厂家", "",(long)ViewData.Model.ShengchanqiyeID)
                    @Html.ValidationMessageFor(m => m.ShengchanqiyeID)
                </div>
            </div>
            @*售后机构*@
            <div class="form-group">
                <div class="control-label col-sm-2">
                    @Html.LabelFor(m => m.ShouhuoJG)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ShouhuoJG, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ShouhuoJG)
                </div>
            </div>
            @*注册证照片*@
            <div class="form-group">
                <label for="name" class="col-sm-2">注册证照片</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" readonly name="zhucezhengtp" id="zhucezhengtp" value="@ViewData.Model.ZhucezhengTP">
                </div>
                <div class="col-sm-2">
                    <button class="form-control" data-toggle="modal" data-target="#myModalUpload" onclick="btn1()">上传</button>
                </div>
                <div class="col-sm-2">
                    <span id="zcz" class="form-control">
                        <a href="/files/zhengzhao/@ViewData.Model.ZhucezhengTP" target="_blank">浏览</a>
                    </span>
                </div>
            </div>
            @*试用范围*@
            <div class="form-group">
                <div class="control-label col-sm-2">
                    @Html.LabelFor(m => m.ShiyongFW)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ShiyongFW, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ShiyongFW)
                </div>
            </div>
            @*注册代理*@
            <div class="form-group">
                <div class="control-label col-sm-2">
                    @Html.LabelFor(m => m.ZhuceDL)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ZhuceDL, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ZhuceDL)
                </div>
            </div>
            @*输入人*@
            <div class="form-group">
                @Html.LabelFor(m => m.MakeMan, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.SelectList_Auto("MakeMan", "userinfo", "fullname", (long)ViewData.Model.MakeMan)
                </div>
            </div>
            @*备注*@
            <div class="form-group">
                <div class="control-label col-sm-2">
                    @Html.LabelFor(m => m.Beizhu)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Beizhu, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Beizhu)
                </div>
            </div>
            @*是否失效*@
            <div class="form-group">
                <div class="control-label col-sm-2">
                    @Html.LabelFor(m => m.ShixiaoSF)
                </div>
                <div class="radio-inline">
                    <label>
                        <input type="radio" name="shixiaosf" value="true">
                        是
                        
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        <input type="radio" name="shixiaosf" value="false">
                        否
                        
                    </label>
                </div>
            </div>
            
        </div>
    }
</div>
