<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Home">首页</a>
        </li>
        <li class="active">生产企业</li>
    </ul>
</div>
<div class="page-content">
    @Html.Search_Condition((int)Session["user_id"], "生产企业_条件组合查询", "/base_shengchanqiye/index", "base_shengchanqiyeindex", scms)
    <div class="page-header">
        <p>
            <button type="button" class="btn btn-default " id="bt_searchInfo" data-toggle="modal" data-target="#myModal"><i class="icon-search"></i>查询</button>
            <button type="button" class="btn btn-default " id="bt_addInfo" onclick="AddInfo()"><i class="icon-adn"></i>新增</button>
            <button type="button" class="btn btn-default " id="bt_updateInfo" onclick="EditInfo()"><i class="icon-edit"></i>编辑</button>
            <button type="button" class="btn btn-default " id="bt_deleteInfo" onclick="DelInfo()"><i class="icon-remove"></i>删除</button>
            <button type="button" class="btn btn-default " id="bt_refreshInfo" onclick="javascript: location.reload()"><i class="icon-refresh"></i>刷新</button>
        </p>
    </div>
    <div class="row">
        <table class="table" id="mydatatable">
            <caption></caption>
            <thead>
                <tr>
                    <td></td>
                    <td>代码</td>
                    <td>名称</td>
                    <td>营业执照编号</td>
                    <td>营业执照有效期</td>
                    <td>营业执照图片</td>
                    <td>生产许可编号</td>
                    <td>生产许可有效期</td>
                    <td>生产许可照片</td>
                    <td>首营状态</td>
                    <td>录入日期</td>
                    <td>输入人</td>
                </tr>
            </thead>
            <tbody>


                @foreach (var item in ViewBag.base_shengchanqiye)
                {

                    <tr>
                        <td>
                            <div class="checkbox">
                                <label><input type="checkbox" value="@item.ID"></label>
                            </div>
                        </td>
                        <td>@item.Daima</td>
                        <td>@item.Qiyemingcheng</td>
                        <td>@item.YingyezhizhaoBH</td>
                        <td>@item.YingyezhizhaoYXQ.ToString("yyyy-MM-dd")</td>

                        <td>

                            <a href="/files/zhengzhao/@item.YingyezhizhaoTP" target="_blank">浏览</a>

                        </td>
                        <td>@item.ShengchanxukeBH</td>
                        <td>@item.ShengchanxukeYXQ.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a href="/files/zhengzhao/@item.ShengchanxukeTP" target="_blank">浏览</a>

                        </td>
                        @*<td>@item.Shouying</td>*@
                        <td>@Html.GetCommonValue_ID("首营状态", (int)item.Shouying)</td>
                        <td>@item.MakeDate.ToString("yyyy-MM-dd")</td>
                        @*<td>@item.MakeMan</td>*@
                        <td>@Html.GetDataValue_ID("userinfo", "全名", (int)item.MakeMan)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="pager">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
    </div>
</div>
