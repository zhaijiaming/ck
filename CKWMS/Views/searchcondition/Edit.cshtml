@using CKWMS.App_Code
@using CKWMS.Models
@model searchconditionViewModel
@{
 ViewBag.Title="查询条件修改";
}

<div class="breadcrumbs" id="breadcrumbs">
<script type="text/javascript">
try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
</script>
<ul class="breadcrumb">
<li>
<i class="icon-home home-icon"></i>
<a href="/Home">首页</a>
</li>
<li>
<a href="/searchcondition">查询条件</a>
</li>
<li class="active"> 编辑</li>
</ul>
</div>

<div class="page-content">
@using(Html.BeginForm("Update","searchcondition",FormMethod.Post,new{ @role = "form" }))
{
@Html.AntiForgeryToken()
<input type="hidden" name="id" value="@ViewData.Model.ID"/>
<div class="page-header">
<p>
<button type="submit" class="btn btn-default"><i class="icon-save"></i>更新</button>
<button type="button" class="btn btn-default" onclick="javascript: history.back(-1); "><i class="icon-hand-left"></i>返回</button>
</p>
</div>
<div class="container">
<div class="form-group">
@Html.LabelFor(m=>m.UserID, new {@class="control-label col-sm-2"})
<div class="col-sm-10">
@Html.TextBoxFor(m => m.UserID, new { @class = "form-control" })
</div>
</div>
<div class="form-group">
@Html.LabelFor(m=>m.ConditionInfo, new {@class="control-label col-sm-2"})
<div class="col-sm-10">
@Html.TextBoxFor(m => m.ConditionInfo, new { @class = "form-control" })
</div>
</div>
<div class="form-group">
@Html.LabelFor(m=>m.PageBrief, new {@class="control-label col-sm-2"})
<div class="col-sm-10">
@Html.TextBoxFor(m => m.PageBrief, new { @class = "form-control" })
</div>
</div>
<div class="form-group">
@Html.LabelFor(m=>m.ModifyDate, new {@class="control-label col-sm-2"})
<div class="col-sm-10">
<input type="date" class="form-control" name="ModifyDate"  value="@string.Format("{0:yyyy-MM-dd}",ViewData.Model.ModifyDate)">
</div>
</div>
<div class="form-group">
@Html.LabelFor(m=>m.ConditionTitle, new {@class="control-label col-sm-2"})
<div class="col-sm-10">
@Html.TextBoxFor(m => m.ConditionTitle, new { @class = "form-control" })
</div>
</div>
</div>
}
</div>

