@using CKWMS.App_Code
@using CKWMS.Models
@using X.PagedList
@using X.PagedList.Mvc
@{
    ViewBag.Title = "包装箱清单";
    string _searchcondition = ViewBag.SearchCondition;
}
<script type="text/javascript">
    $(document).ready(function () {
        $("tr").bind("dblclick", function () {
            var u_id = $(this).find('td').eq(0).find('input').val();
            if (u_id != null) {
                var url_go = "/zx_xingdy/Edit/" + u_id;
                location.href = url_go;
            }
        });
        //true => '是'，false => '否'
        var item_sum = $("#mydatatable tr").length - 1;//获取总行数
        for (var i = 0; i < item_sum; i++) {
            if ($(".ZhanyongSF").eq(i).html() == "True") {
                $(".ZhanyongSF").eq(i).html("是")
            }
            else {
                $(".ZhanyongSF").eq(i).html("否")
            }
            if ($(".ZhouzhuanSF").eq(i).html() == "True") {
                $(".ZhouzhuanSF").eq(i).html("是")
            }
            else {
                $(".ZhouzhuanSF").eq(i).html("否")
            }
        }
        //固定表头
        var th_new = $("#mydatatable tr").eq(0).clone();
        $("#fixed-table-header").append(th_new);
        trResize();//初始化表头
        $("#sidebar").click(function () {//导航栏点击初始化表头
            trResize();
        });
        $(window).resize(function () {
            trResize();
        });
        $(".table-wapper").scroll(function () {
            var scroll = -$(this).scrollLeft();
            $(".fixed-table-wapper").css("left", scroll + "px");
        });
        $("#fixed-table-header tr").css("background-color", "#e1edfe");　 //固定表头颜色
        $("#mydatatable tr:odd").css("background-color", "#f2f7fe");　 //偶行颜色
        $("#mydatatable tr:even").css("background-color", "#e1edfe");//奇行颜色
        $("#mydatatable tr").click(function () {
            
            //console.log($(this).attr('class'));
            if ($(this).attr('class') != "success") {
                $(this).addClass("success").siblings().removeClass("success").end();
            } else {
                $(this).removeClass("success").end();
            }
        });
    });
    function trResize() {
        var inner_width = $("#mydatatable").outerWidth();
        $(".fixed-table-wapper").css("width", inner_width + "px");
        $("#fixed-table-header th").each(function () {
            var num = $(this).index();
            var th_width = $("#mydatatable th").eq(num).outerWidth();
            var th_height = $("#mydatatable th").eq(num).outerHeight();
            //console.log("th_width:" + num + ":" + th_width);
            $(this).css("width", th_width + "px");
            $(this).css("height", th_height + "px");
        });
    }
    function AddInfo() {
        location.href = "/zx_xingdy/Add";
    }
    function EditInfo() {
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                location.href = "/zx_xingdy/Edit/" + $(this).val();
        });
    }
    function DelInfo() {
        var sDel = "";
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                sDel = sDel + ", " + $(this).val()
        });
        if (sDel.length < 2)
            return;
        var url_go = "/zx_xingdy/Delete/?del=" + sDel;
        location.href = url_go;
    }
</script>
@{
    List<SearchConditionModel> scms = new List<SearchConditionModel>();
    if (_searchcondition == null || _searchcondition == "")
    {
        SearchConditionModel scm = new SearchConditionModel();
        scm.ItemCode = "Xianghao";
        scm.ItemTitle = "型号";
        scm.ItemType = "System.String";
        scms.Add(scm);
    }
    else
    {
        string[] scs = _searchcondition.Split(';');
        if (scs.Length > 0)
        {
            SearchConditionModel scm = new SearchConditionModel();
            scm.ItemCode = "Xianghao";
            scm.ItemTitle = "型号";
            scm.ItemType = "System.String";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[0].Split(',')[1];
                scm.ItemOpValue = scs[0].Split(',')[2];
                scm.ItemJion = scs[0].Split(',')[3];
            }
            scms.Add(scm);
        }
    }
}

<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Home">首页</a>
        </li>
        <li class="active">包装箱</li>
    </ul>
</div>
<div class="page-content">
    @Html.Search_Condition((int)Session["user_id"], "包装箱_条件组合查询", "/zx_xingdy/index", "zx_xingdy_index", scms)
    <div class="page-header">
        <p>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4 " id="bt_searchInfo" data-toggle="modal" data-target="#myModal"><i class="icon-search"></i><b>查询</b></button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4 " id="bt_addInfo" onclick="AddInfo()"><i class="icon-adn"></i><b>新增</b></button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4 " id="bt_updateInfo" onclick="EditInfo()"><i class="icon-edit"></i><b>编辑</b></button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4 " id="bt_deleteInfo" onclick="DelInfo()"><i class="icon-remove"></i><b>删除</b></button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4 " id="bt_refreshInfo" onclick="javascript: location.reload()"><i class="icon-refresh"></i><b>刷新</b></button>
        </p>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="table-wapper-all" style="position:relative;overflow:hidden;">
                <div class="fixed-table-wapper" style="position:absolute;top:0px;left:0px;background-color:#fff;border-bottom:1px solid #ddd;">
                    <table class="table table-bordered table-condensed" id="fixed-table-header" style="margin-bottom:0px;"></table>
                </div>
                <div class="table-wapper" style="height:473px;overflow-y:auto;">
                    <table class="table table-bordered table-condensed" id="mydatatable">
                        <tr>
                            <th></th>
                            <th>箱号</th>
                            <th>体积</th>
                            <th>箱型</th>
                            <th>状态</th>
                            <th>开始装箱时间</th>
                            <th>结束装箱时间</th>
                            <th>是否占用</th>
                            <th>是否周转</th>
                            <th>制单日期</th>
                            <th>制单人</th>
                        </tr>
                        <tbody>
                            @foreach (var item in ViewBag.zx_xingdy)
                            {
                                <tr>
                                    <td>
                                        <label><input type="checkbox" value="@item.ID"></label>
                                    </td>
                                    <td>@item.Xianghao</td>
                                    <td>@item.Tiji</td>
                                    <td>@Html.GetCommonValue_ID("纸箱规格", (int)item.Xiangxing)</td>
                                    <td>@Html.GetCommonValue_ID("包装箱状态", (int)item.Zhuangtai)</td>
                                    <td>@string.Format("{0:yyyy/MM/dd}", item.KaishiSJ)</td>
                                    <td>@string.Format("{0:yyyy/MM/dd}", item.JieshuoSJ)</td>
                                    <td><span class="ZhanyongSF">@item.ZhanyongSF</span></td>
                                    <td><span class="ZhouzhuanSF">@item.ZhouzhuanSF</span></td>
                                    <td>@string.Format("{0:yyyy/MM/dd}", item.MakeDate)</td>
                                    <td>@Html.GetDataValue_ID("userinfo", "全名", (int)item.MakeMan)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <span class="pager">
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
            </span>
        </div>
    </div>
</div>
