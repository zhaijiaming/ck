@using CKWMS.App_Code
@using CKWMS.Models
@using X.PagedList
@using X.PagedList.Mvc
@{
    ViewBag.Title = "包装箱清单";
    string _searchcondition = ViewBag.SearchCondition;
}
<script type="text/javascript">
    $(document).ready(function () {
        $("tr").bind("dblclick", function () {
            var u_id = $(this).find('td').eq(0).find('input').val();
            if (u_id != null) {
                var url_go = "/zx_xingdy/Edit/" + u_id;
                location.href = url_go;
            }
        });
        //true => '是'，false => '否'
        var item_sum = $("#mydatatable tr").length-1;//获取总行数
        for (var i = 0; i < item_sum; i++) {
            if ($(".ZhanyongSF").eq(i).html() == "True") {
                $(".ZhanyongSF").eq(i).html("是")
            }
            else {
                $(".ZhanyongSF").eq(i).html("否")
            }
            if ($(".ZhouzhuanSF").eq(i).html() == "True") {
                $(".ZhouzhuanSF").eq(i).html("是")
            }
            else {
                $(".ZhouzhuanSF").eq(i).html("否")
            }
        }
    });
    function AddInfo() {
        location.href = "/zx_xingdy/Add";
    }
    function EditInfo() {
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                location.href = "/zx_xingdy/Edit/" + $(this).val();
        });
    }
    function DelInfo() {
        var sDel = "";
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                sDel = sDel + ", " + $(this).val()
        });
        if (sDel.length < 2)
            return;
        var url_go = "/zx_xingdy/Delete/?del=" + sDel;
        location.href = url_go;
    }
</script>
@{
    List<SearchConditionModel> scms = new List<SearchConditionModel>();
    if (_searchcondition == null || _searchcondition == "")
    {
        SearchConditionModel scm = new SearchConditionModel();
        scm.ItemCode = "Xianghao";
        scm.ItemTitle = "型号";
        scm.ItemType = "System.String";
        scms.Add(scm);
    }
    else
    {
        string[] scs = _searchcondition.Split(';');
        if (scs.Length > 0)
        {
            SearchConditionModel scm = new SearchConditionModel();
            scm.ItemCode = "Xianghao";
            scm.ItemTitle = "型号";
            scm.ItemType = "System.String";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[0].Split(',')[1];
                scm.ItemOpValue = scs[0].Split(',')[2];
                scm.ItemJion = scs[0].Split(',')[3];
            }
            scms.Add(scm);
        }
    }
}

<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Home">首页</a>
        </li>
        <li class="active">包装箱</li>
    </ul>
</div>
<div class="page-content">
    @Html.Search_Condition((int)Session["user_id"], "包装箱_条件组合查询", "/zx_xingdy/index", "zx_xingdy_index", scms)
    <div class="page-header">
        <p>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4 " id="bt_searchInfo" data-toggle="modal" data-target="#myModal"><i class="icon-search"></i>查询</button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4 " id="bt_addInfo" onclick="AddInfo()"><i class="icon-adn"></i>新增</button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4 " id="bt_updateInfo" onclick="EditInfo()"><i class="icon-edit"></i>编辑</button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4 " id="bt_deleteInfo" onclick="DelInfo()"><i class="icon-remove"></i>删除</button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4 " id="bt_refreshInfo" onclick="javascript: location.reload()"><i class="icon-refresh"></i>刷新</button>
        </p>
    </div>
    <div class="row">
            <table class="table table-striped" id="mydatatable">
                <caption></caption>
                <thead>
                    <tr>
                        <td></td>
                        <td>型号</td>
                        <td>体积</td>
                        <td>箱型</td>
                        <td>状态</td>
                        <td>开始装箱时间</td>
                        <td>结束装箱时间</td>
                        <td>是否占用</td>
                        <td>是否周转</td>
                        <td>制单日期</td>
                        <td>制单人</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.zx_xingdy)
                {
                        <tr>
                            <td>
                                <label><input type="checkbox" value="@item.ID"></label>
                            </td>
                            <td>@item.Xianghao</td>
                            <td>@item.Tiji</td>
                            <td>@Html.GetCommonValue_ID("纸箱规格", (int)item.Xiangxing)</td>
                            <td>@Html.GetCommonValue_ID("包装箱状态", (int)item.Zhuangtai)</td>
                            <td>@string.Format("{0:yyyy/MM/dd}", item.KaishiSJ)</td>
                            <td>@string.Format("{0:yyyy/MM/dd}", item.JieshuoSJ)</td>
                            <td><span class="ZhanyongSF">@item.ZhanyongSF</span></td>
                            <td><span class="ZhouzhuanSF">@item.ZhouzhuanSF</span></td>
                            <td>@string.Format("{0:yyyy/MM/dd}", item.MakeDate)</td>
                            <td>@Html.GetDataValue_ID("userinfo", "全名", (int)item.MakeMan)</td>
                        </tr>
                }
                </tbody>
            </table>
    </div>
    <div class="pager">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
    </div>
</div>
