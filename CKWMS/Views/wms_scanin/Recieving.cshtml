@using CKWMS.App_Code
@using CKWMS.Models
@{
    ViewBag.Title = "收货";
    Layout = "~/Views/Shared/EmptyView.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#bt_ok").click(function () {
            $.post("/wms_scanin/recieveok", {
                rk: $("#rkid").val()
            }, function (data) {
                if (data == -1)
                    alert("所有货品完成收货后，才能结束收货工作！");
                if (data == -2)
                    alert("完成时出现错误，请重试！");
            });
        });
    });
</script>
@*<h2>收货</h2>*@
<div style="width:360px;height:300px;overflow:auto">
    <div class="page-content">
        @using (Html.BeginForm("SaveRecieve", "wms_scanin", FormMethod.Post, new { @role = "form" }))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" id="rkid" name="rkid" value="@ViewBag.rkd" />
            <div class="page-header">
                <p>入库编号：@ViewBag.rkbh</p>
                <p>
                    <button type="submit" class="btn btn-default"><i class="icon-save"></i>保存</button>
                    <button type="button" id="bt_ok" class="btn btn-default"><i class="icon-ok"></i>完成</button>
                    <button type="button" class="btn btn-default" onclick="javascript:location.href='/wms_scanin/index'; "><i class="icon-hand-left"></i>返回</button>
                </p>
            </div>
            <div class="container">
                <div class="form-group">
                    <p><icon class="icon-paper-clip"></icon>入库批号收货</p>
                </div>
                <div class="form-group">
                    <label class="col-sm-4">批号</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="pihao" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4">数量</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="phnum" />
                    </div>
                </div>
                <div class="form-group">
                    <p><icon class="icon-signal"></icon>序列号收货</p>
                </div>
                <div class="form-group">
                    <label class="col-sm-4">序列</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="xlm" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4">数量</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="xlnum" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <p><icon class="icon-barcode"></icon>商品条码收货</p>
            </div>
            <div class="form-group">
                <label class="col-sm-4">条码</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="shangpin" value="" />
                </div>
            </div>
                <div class="form-group">
                    <label class="col-sm-4">数量</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="spnum" />
                    </div>
                </div>
        }
    </div>

</div>