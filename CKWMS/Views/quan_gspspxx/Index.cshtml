@using CKWMS.App_Code
@using CKWMS.Models
@using X.PagedList
@using X.PagedList.Mvc
@{
    ViewBag.Title = "GSP商品信息清单";
    string _searchcondition = ViewBag.SearchCondition;
}
<script type="text/javascript">
    $(document).ready(function () {
        $("tr").bind("dblclick", function () {
            var u_id = $(this).find('td').eq(0).find('input').val();
            if (u_id != null) {
                var url_go = "/quan_gspspxx/addgsp/" + u_id+"?ed=1";
                location.href = url_go;
            }
        });
        $("#bt_sendcheck").click(function () {
            var sendval = "";
            var stateinfo = "";
            var ng = false;
            $("#mydatatable tr input[type=checkbox]").each(function () {
                if (this.checked) {
                    sendval = sendval + $(this).val() + ",";
                    stateinfo = $(this).parent().parent().parent().find("td").eq(1).html();
                    if (stateinfo != "新建")
                        ng = true;
                }
            });
            if (ng) {
                alert("只有新建状态才能送审！");
                return;
            }
            if (!confirm("送审后不能再修改数据，确定要送审吗？"))
                return;
            $.ajax({
                async: true,
                beforeSend: function () {
                    ShowWait();
                },
                complete: function () {
                    HiddenWait();
                },
                type: "POST",
                url: "/quan_shouyingsq/checkadd",
                data: {
                    checkval: sendval,
                    checktype: "9"
                },
                success: function (data) {
                    if (data != "ok")
                        alert("送审失败，请重新上传！");
                    else
                        window.location.reload();
                }
            });
        });

    });
    function EditInfo() {
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                location.href = "/quan_gspspxx/addgsp/" + $(this).val() + "?ed=1";
        });
    }
    function DelInfo() {
        var sDel = "";
        var stateinfo = "";
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked) {
                stateinfo = $(this).parent().parent().parent().find("td").eq(1).html();
                sDel = $(this).val();
            }
        });
        if (sDel.length < 2)
            return;
        if (stateinfo != "新建") {
            alert("只有新建状态下才能删除！");
            return;
        }
        var url_go = "/quan_gspspxx/Delete/?del=" + sDel;
        location.href = url_go;
    }
</script>
@{
    List<SearchConditionModel> scms = new List<SearchConditionModel>();
    if (_searchcondition == null || _searchcondition == "")
    {
        SearchConditionModel scm = new SearchConditionModel();
        scm.ItemCode = "HuozhuID";
        scm.ItemShowName = "huozhuid";
        scm.ItemTitle = "货主";
        scm.ItemType = "货主.简称";
        scms.Add(scm);
        scm = new SearchConditionModel();
        scm.ItemCode = "Daima";
        scm.ItemTitle = "商品代码";
        scm.ItemType = "System.String";
        scms.Add(scm);

        scm = new SearchConditionModel();
        scm.ItemCode = "Mingcheng";
        scm.ItemTitle = "商品名称";
        scm.ItemType = "System.String";
        scms.Add(scm);
        scm = new SearchConditionModel();
        scm.ItemCode = "Shouying";
        scm.ItemTitle = "首营状态";
        scm.ItemType = "首营状态.首营状态";
        scms.Add(scm);
    }
    else
    {
        string[] scs = _searchcondition.Split(';');
        if (scs.Length > 0)
        {
            SearchConditionModel scm = new SearchConditionModel();
            scm.ItemCode = "HuozhuID";
            scm.ItemShowName = "huozhuid";
            scm.ItemTitle = "货主";
            scm.ItemType = "货主.简称";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[0].Split(',')[1];
                if (scm.ItemValue.Length == 0)
                {
                    scm.ItemValue = "0";
                }
                scm.ItemOpValue = scs[0].Split(',')[2];
                scm.ItemJion = scs[0].Split(',')[3];
            }
            scms.Add(scm);
            scm = new SearchConditionModel();
            scm.ItemCode = "Daima";
            scm.ItemTitle = "商品代码";
            scm.ItemType = "System.String";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[1].Split(',')[1];
                scm.ItemOpValue = scs[1].Split(',')[2];
                scm.ItemJion = scs[1].Split(',')[3];
            }
            scms.Add(scm);

            scm = new SearchConditionModel();
            scm.ItemCode = "Mingcheng";
            scm.ItemTitle = "商品名称";
            scm.ItemType = "System.String";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[2].Split(',')[1];
                scm.ItemOpValue = scs[2].Split(',')[2];
                scm.ItemJion = scs[2].Split(',')[3];
            }
            scms.Add(scm);
            scm = new SearchConditionModel();
            scm.ItemCode = "Shouying";
            scm.ItemTitle = "首营状态";
            scm.ItemType = "首营状态.首营状态";
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[3].Split(',')[1];
                if (scm.ItemValue.Length == 0)
                {
                    scm.ItemValue = "0";
                }
                scm.ItemOpValue = scs[3].Split(',')[2];
                scm.ItemJion = scs[3].Split(',')[3];
            }
            scms.Add(scm);
        }
    }
}
